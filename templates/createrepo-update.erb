#!/bin/bash

if [ $(whoami) != '<%= @repo_owner %>' ]; then
    echo "You really should be <%= @repo_owner %> while running $0"
    exit 1
fi

<%= %Q(#{@repomanage_cleanup}\n) if @cleanup -%>
<% if @use_lockfile == true %>
	flock -e <%= @lockfile %> <%= @createrepo_update %>
<% else %>
    <%= @createrepo_update %>
<% end -%>
